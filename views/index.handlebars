	<button class="devour" data-id="{{this.id}}" data-newsleep="{{devoured}}">Devour It!</button>

</div>

<script type="text/javascript">

$(function() {
    $("submit").on("click", function(event) {
        var id = $(this).data("id");
        var devoured = $(this)data("devoured");

        var devourBurger = {
            devoured: devoured
        };

        $.ajax("/api/burgers" + id, {
            type: "PUT",
            data: devourBurger
        }).then(function() {
            console.log("Burger Devoured", devoured);
            location.reload();
        });
    });

    
});




</script>






